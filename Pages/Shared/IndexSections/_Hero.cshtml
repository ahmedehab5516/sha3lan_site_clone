@model dynamic

<!-- Main Hero Section Container -->
<section id="hero" class="relative w-full max-w-6xl mx-auto bg-white shadow-xl rounded-lg overflow-hidden my-8">
    <div class="grid grid-cols-1 md:grid-cols-2">

        <!-- Right Column: Text Content (Adapted for RTL) -->
        <div class="p-8 md:p-16 flex flex-col justify-center relative order-last md:order-first">
            <!-- Top-right circular logo -->
            <div class="absolute top-8 right-8 flex items-center justify-center w-20 h-20 border-2 border-gray-300 rounded-full">
                <div class="text-center text-sm font-semibold text-gray-600 leading-tight">
                    Sha3Clone
                </div>
            </div>

            <!-- Top-left contact info -->
            <div class="absolute top-8 left-8">
                <a href="mailto:info@sha3clone.com" class="text-sm font-medium text-gray-600 hover:text-gray-900 tracking-wider">INFO@SHA3CLONE.COM</a>
            </div>


            <!-- Main Text Block -->
            <div class="mt-24 text-right">
